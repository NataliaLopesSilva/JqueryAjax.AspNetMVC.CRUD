<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> SPA - CRUD AJAX</title>
    <link href="~/Content/img/logo2.png" rel="icon" />

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    @RenderSection("styles", false)

    <script src="~/Scripts/Plugins/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/Plugins/bootstrap.min.js"></script>
</head>
<body style="margin: 50px">
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Bem Vindo!", "ReceitaPrincipal", "Receita", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        <section>
            @RenderBody()
        </section>
        <hr />
        <footer>
            <p style="text-align:center">
                <img src="~/Content/img/imagem.png" width="30" />
            </p>
        </footer>
    </div>
</body>
</html>