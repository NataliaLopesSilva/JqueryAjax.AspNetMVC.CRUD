<script>
    $(document).ready(function () {
        for (var i = 0; i < 10; i++) {
            AdicionarInformacaoNutricional();
        }
    });

    function AdicionarInformacaoNutricional() {
        var tipo = "Calorias";
        var quantidade = 300;

        TabelaInformacaoNutricional($('#oi'), tipo, quantidade);
    }

    function TabelaInformacaoNutricional(tabela, tipo, quantidade) {
        var tr = $('<tr></tr>');

        tr.append('<td style="white-space: nowrap;">' + tipo + '</td>');
        tr.append('<td style="white-space: nowrap;">' + quantidade + '</td>');

        tabela.append(tr);
    }
</script>