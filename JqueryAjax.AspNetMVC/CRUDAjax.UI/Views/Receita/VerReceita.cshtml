@{
    ViewBag.Title = "VerReceita";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<div class="modal-dialog modal-lg" style="width: 70%">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span><span class="sr-only">Close</span></button>
        </div>

        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">

                </div>
            </div>
            <div class="row">
                <div class="col-md-4" style="align-content:center">
                    <div class="panel">
                        <img src="~/Images/nophotoII.jpg" style="width:290px; height:270px; box-shadow:0 4px 8px 0 rgba(0, 0, 0, 0.2)" />
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="text-align:left; font-weight:bold; font-size:18px">Informações Nutricionais</h3>
                        </div>
                        <div class="panel-body">

                            <table class="table table-striped table-condensed tab" id="oi">
                                <thead>
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Valor</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-4" style="align-content:center">
                    <div class="panel panel-default" style="width: 570px; height:270px">
                        <div class="panel-heading">
                            <h2 class="panel-title" style="text-align:center; font-size:25px">Ingredientes</h2>
                        </div>
                        <div class="panel-body">
                        </div>
                    </div>
                    <div class="panel panel-default" style="width: 570px; height:330px">
                        <div class="panel-heading">
                            <h2 class="panel-title" style="text-align:center; font-size:25px">Modo de preparo</h2>
                        </div>
                        <div class="panel-body">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Alterar</button>
                <button type="button" class="btn btn-primary" onclick="x()">Salvar</button>
            </div>
        </div>

    </div>
</div>

